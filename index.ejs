        function loadChat(){
            socket.on("init", data =>{
                let inner = ``;
                console.log("Recibiendo..", data);
                data.forEach(element => {
                    let time=getDateTime();
                    inner += `<b>${element.name } ${time}:</b> ${element.mensaje} </br>`;
                });
                parrafo.innerHTML = inner;
            });
            socket.on("loadUsers", data =>{
                console.log("Nuevo usuario", data);
